<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:padding="16dp">

    <FrameLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="20sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Enregistrement"
            android:textSize="24sp"
            android:textStyle="normal|bold">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-----"
            android:id="@+id/gps_view"
            android:textSize="14sp">

        </TextView>

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/etPrenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PrÃ©nom"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:layout_margin="5dp"
            android:inputType="textPersonName" />


        <EditText
            android:layout_margin="5dp"
            android:id="@+id/ettelephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telephone 1"
            android:inputType="phone" />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/etnbrPorte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre porte"
            android:inputType="number" />


        <Spinner
            android:id="@+id/spinnerCategories"

            android:layout_margin="5dp"
            android:entries="@array/categories_array"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerEtat"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/type_etat" />

        <Spinner
            android:id="@+id/spinnerTypeProperty"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/type_entity" />


        <Button
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider" />

    </LinearLayout>

        <com.gouandiaka.market.WaitingView
            android:id="@+id/waiting_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:visibility="gone" />


    </FrameLayout>


</ScrollView>
