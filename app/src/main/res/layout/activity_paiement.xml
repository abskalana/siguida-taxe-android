<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Paiement"
            android:textSize="24sp"
            android:textStyle="normal|bold">
        </TextView>

        <TextView
            android:text="INFORMATION COMMERCE"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@color/catalogui_blue_manoeuvre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:padding="10dp"
            android:background="@color/md_grey_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nomcomplet"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_telephone1"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:autoLink="phone"
                    android:visibility="gone"
                    android:textColor="@android:color/holo_blue_dark" />


                <TextView
                    android:id="@+id/tv_telephone2"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:autoLink="phone"
                    android:linksClickable="true"
                    android:visibility="gone"
                    android:drawablePadding="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_blue_dark" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_info"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:text="INFORMATION TICKET"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:background="@color/catalogui_blue_manoeuvre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ticket type"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spinner_ticket_type"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:entries="@array/type_ticket" />
    </LinearLayout>
       <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Ticket numero"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/tv_ticket_num"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </LinearLayout>



        <TextView
            android:text="INFORMATION PAIEMENT"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:background="@color/catalogui_blue_manoeuvre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"

            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="MONTANT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/tv_montant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number" />
        </LinearLayout>


        <Spinner
            android:id="@+id/spinner_paiement"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/status_array" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Commentaire"
            android:inputType="text" />

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/btn_process_paiement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider" />

    </LinearLayout>

</ScrollView>
